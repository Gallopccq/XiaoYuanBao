        <!--/LinearLayout-->

        <View style="@style/horizontal_line_style" />
        <com.allen.library.SuperTextView
            android:id="@+id/shou_cang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftTextString="收藏"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextColor="@color/color_000000"
            stv:sRightIconRes="@drawable/ic_right_next" />



        <com.allen.library.SuperTextView
            android:id="@+id/gou_wu_dan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftTextString="购物单"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextColor="@color/color_000000"
            stv:sRightIconRes="@drawable/ic_right_next" />


        <com.allen.library.SuperTextView
            android:id="@+id/zu_ji"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftTextString="足迹"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextColor="@color/color_000000"
            stv:sRightIconRes="@drawable/ic_right_next" />


        <com.allen.library.SuperTextView
            android:id="@+id/li_shi_ding_dan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftTextString="历史订单"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextColor="@color/color_000000"

            stv:sRightIconRes="@drawable/ic_right_next" />

        <com.allen.library.SuperTextView
            android:id="@+id/li_shi_shang_jia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftTextString="历史上架"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextColor="@color/color_000000"

            stv:sRightIconRes="@drawable/ic_right_next" />

        <com.allen.library.SuperTextView
            android:id="@+id/shou_huo_di_zhi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            stv:sLeftTextString="收货地址"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextColor="@color/color_000000"

            stv:sRightIconRes="@drawable/ic_right_next" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_profile_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V1.0.0"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_logout"
            style="@style/style_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_btn_negative"
            android:text="@string/login_out"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            />
    </LinearLayout>

</ScrollView>